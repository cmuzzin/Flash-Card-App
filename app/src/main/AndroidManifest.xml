<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobile.csce.uark.flash" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateDeck"
            android:label="@string/title_activity_create_deck" >
        </activity>
        <activity
            android:name=".ViewDeck"
            android:label="@string/title_activity_view_deck" >
        </activity>
        <activity
            android:name=".DeckOverview"
            android:label="@string/title_activity_deck_overview"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".CardCreation"
            android:label="@string/title_activity_card_creation"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".CardFlipActivity"
            android:label="@string/title_activity_card_flip" >
        </activity>
        <activity
            android:name=".ScreenSlideActivity"
            android:label="@string/title_activity_screen_slide" >
        </activity>
        <activity
            android:name=".ScreenSlidePageFragment"
            android:label="@string/title_activity_screen_slide_page_fragment" >
        </activity>
    </application>

</manifest>
