<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="mobile.csce.uark.flash.CardCreation" android:id="@+id/TouchView">


    <ImageView android:id="@+id/menuBackground"
        android:src="@drawable/wood"
        android:adjustViewBounds="true"
        android:gravity="center_vertical"
        android:scaleType="fitXY"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    <RelativeLayout
        android:id="@+id/navigationbar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true">
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/woodnavigationbar"
            android:scaleType="fitXY"/>
        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textColor="#ffffff"
            android:id="@+id/Save"
            android:onClick="SaveCard"
            android:layout_alignParentBottom="true"


            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/navigationbarlabel"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="20dp"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/button5"
            android:onClick="GoBackToCardsView"
            android:layout_alignParentBottom="true"
            android:textColor="#ffffff"
            android:layout_marginEnd="65dp" />

    </RelativeLayout>




        <FrameLayout
            android:id="@+id/fr1_id"
            android:layout_height="285dp"
            android:layout_width="500dp"
            android:layout_marginTop="40dp"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text = "X"
        android:textStyle="bold"
        android:id="@+id/Delete"
        android:onClick="DeleteCard"
        android:textColor="#c46f0300"
        android:textSize="20pt"
        android:background="#92ff0003"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/navigationbar"
        android:layout_toStartOf="@+id/fr1_id"
        android:layout_marginBottom="10dp"/>
    <Button
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="+"
        android:textSize="30pt"
        android:id="@+id/CreateNew"
        android:onClick="NewCard"
        android:textColor="#bf027310"
        android:background="#9200ff18"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/fr1_id"
        android:layout_alignTop="@+id/fr1_id"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:id="@+id/fr2_id"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/navigationbar"
        android:background="#00000000"
        android:layout_alignParentStart="true">



    </RelativeLayout>
    <!--<EditText
            android:layout_width="520dp"
            android:layout_height="fill_parent"
            android:id="@+id/FrontCardText"
            android:textSize="32dp"
            android:hint="Front Side of the Card"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginRight="38dp"
            android:layout_below="@id/navigationbar"
            android:layout_marginBottom="10dp"
            android:background="#00000000"
            android:cursorVisible="false"
    -->

</RelativeLayout>